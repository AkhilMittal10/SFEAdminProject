@model List<ViewMaterialDetailReport>
@{
    ViewData["Title"] = "MaterialDetailReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>MaterialDetailReport</h1>


<form>
    <style>
        table th, td {
            border: 2px solid black;
            width: 20%;
            background-color: lightpink;
            text-align:center
        }
    </style>
    <table>
        <tr>
            <th>
                MaterialID
            </th>
            <th>
                MaterialName
            </th>
            <th>
                Quantity
            </th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Model[i].MaterialID
                </td>
                <td>
                    @Model[i].MaterialName
                </td>
                <td>
                    @Model[i].Quantity
                </td>
            </tr>
        }

    </table>
</form>
